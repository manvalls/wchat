{% import "github.com/manvalls/wchat/types" %}

{% func Chat(messages []types.Message) %}
<div id="messages" w-sub>
    {% for _, msg := range messages %}
        {%= Message(msg) %}
    {% endfor %}
</div>
<form method="post">
    <input type="text" name="message" autocomplete="off" autofocus/>
    <input type="submit" value="Send" />
</form>
{% endfunc %}